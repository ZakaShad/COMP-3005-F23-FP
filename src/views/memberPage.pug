doctype html
html
  head
    title User Profile
  body
    h1 #{email}

    h3 Profile
    ul
      li Height: #{height}
      li Weight: #{weight}
      li Resting Heart Rate (RHR): #{rhr}
      li Max Heart Rate (MHR): #{mhr}
      li Desired Weight: #{desired_weight}
      li Membership Level: #{membership_level}
      li Loyalty Points: #{loyalty_points}
    a(href=`/member/${email}/schedule`) View Schedule (Events and Training Sessions) <br/>
    //- a(href=`/session/${username}`) Schedule Training Session 

    h3 Routines
    ul
        each routine in routines 
            li #{routine}

    h3 Workouts
    a(href=`/member/${email}/goal`) Goal PRs <br />
    a(href=`/member/${email}/goal`) Achieved PRs <br />
    a(href=`/member/${email}/goal`) All PRs <br />
x 
