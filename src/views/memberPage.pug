      button(type="button", onclick=`window.location.href = '/member/${email}/editProfile'`) Edit Profile
      button(type="button", onclick="window.location.href = '/'") Edit Routines
      button(type="button", onclick="window.location.href = '/'") Edit Workouts Performed
      button(type="button", onclick="window.location.href = '/'") Edit PRs
